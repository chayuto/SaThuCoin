 # ==============================================                                                                                                                           
  # SaThuCoin Environment Configuration                         
  # ==============================================                                                                                                                           
  # Copy this file to .env and fill in your values.                                                                                                                          
  # NEVER commit .env to version control.

  # Deployer private key (WITHOUT 0x prefix, 64 hex characters)
  PRIVATE_KEY=

  # Admin address (receives DEFAULT_ADMIN_ROLE + PAUSER_ROLE)
  # REQUIRED for mainnet. For MVP, use your deployer address.
  ADMIN_ADDRESS=

  # Minter address (receives MINTER_ROLE)
  # REQUIRED for mainnet. For MVP, use your deployer address.
  MINTER_ADDRESS=

  # RPC endpoints (optional â€” defaults to public RPCs)
  RPC_URL=https://sepolia.base.org
  RPC_URL_MAINNET=https://mainnet.base.org

  # BaseScan API key for contract verification (optional, post-MVP)
  # Get one at https://basescan.org/myapikey
  BASESCAN_API_KEY=

  # Scraper settings (Phase 4+)
  SCRAPE_INTERVAL=0 */6 * * *
