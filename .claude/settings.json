{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run compile)",
      "Bash(npm run clean)",
      "Bash(npm test)",
      "Bash(npm run test:gas)",
      "Bash(npx hardhat *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git add *)",
      "Bash(ls *)",
      "Bash(node --version)",
      "Bash(npm --version)",
      "Bash(npm list *)",
      "Bash(npm install)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(npm run deploy:*)",
      "Bash(npx hardhat run scripts/deploy*)",
      "Bash(npx hardhat run scripts/verify*)",
      "Bash(*--network base-mainnet*)",
      "Bash(*--network base-sepolia*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
